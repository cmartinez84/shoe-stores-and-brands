<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
    <body>
        <div class="container">
            {% if allBrands is not empty%}
            <div class="well">
                <h1>Here is a list of all our brands</h1>
                <ul>
                    {% for brand in allBrands %}
                    <a href="/brands/{{brand.getId}}"><li>{{brand.getName}}</li></a>
                    {% endfor %}
                </ul>
            </div>

            {%else%}
            <div class="well">
                <h1>Here is a list of all our brands</h1>
                <h1>There are currently no brands listed</h1>
            </div>
            {% endif %}
            <div class="well">
                <label for="">Add a new brand:</label>
                <form class="" action="/brands" method="post">
                    <div class="form-group">
                        <label for="">Name:</label>
                        <input type="text" name="name" value="">
                        <button type="submit" name="button">Submit</button>
                    </div>
                </form>
            </div>
            {% if selected_brand%}
            <div class="well">
                    <h1>{{selected_brand.getName}}</h1>
                    <form class="" action="/brands/delete" method="post">
                        <input type="hidden" name="_method" value="delete">
                        <input type="hidden" name="brand_id" value="{{selected_brand.getId}}">
                        <button class="btn btn-danger form-control" type="submit" name="button">Delete</button>
                    </form>
                    <form class="" action="/brands/{{selected_brand.getId}}" method="post">
                        <input type="hidden" name="_method" value="patch">
                        <label for="">Edit Information:</label>
                        <div class="form-group">
                            <label for="">Edit Name:</label>
                            <input type="hidden" name="brand_id" value="{{selected_brand.getId}}">
                            <input type="text" name="name" value="{{selected_brand.getName}}">
                            <button class="form-control btn btn-success" type="submit" name="button">Update</button>
                        </div>
                    </form>
            </div>
            {%if selected_stores is not empty%}
            <h3>Stores that carry this brand:</h3>
                <ul>
                    {% for store in selected_stores%}
                    <a href="/store/{{store.getId}}"><li>{{store.getName}}</li></a>
                    {% endfor %}
                </ul>
                {% endif %}
            {% endif %}


        </div>
    </body>

</html>
